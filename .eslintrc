{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "react-app",
    "prettier"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-var": 2,
    "prefer-const": 2,
    "incorrect": "never",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": true,
        "semi-spacing": [
          "error",
          {
            "before": false,
            "after": true
          }
        ],
        "singleQuote": true,
        "no-mixed-spaces-and-tabs": [
          "error",
          "smart-tabs"
        ],
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ]
  }
}